<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Screen"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <GridLayout
            android:id="@+id/seatGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <RadioGroup
            android:id="@+id/timeScheduleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="11:00 AM"/>

            <RadioButton
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="2:30 PM"/>

            <RadioButton
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="6:00 PM"/>

            <RadioButton
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="9:30 PM"/>
        </RadioGroup>

        <TextView
            android:id="@+id/selectedSeatsText"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="No seats selected"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/totalPriceText"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Total: â‚±0.00"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_secondary"
            android:text="Confirm Reservation"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>